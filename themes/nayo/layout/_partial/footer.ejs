<% var since = theme.footer.since %> <% var year = date(new Date(), 'YYYY') %>

<footer class="footer">
  <div class="inner">
    <div class="copyright">
      &copy; <% if (since < year){%> <%= since %> - <% }%> <%= year %> Powered
      by
      <a href="<%= theme.social.Github %>" target="_blank">
        <%= theme.footer.author || theme.profile.author || config.author %>
      </a>
    </div>
  </div>
</footer>
